<div class="container">
  <div class="row">
    <% if notice%>
      <div class="alert alert-success">
        <p id="notice"><%= notice %></p>
      </div>
    <% end %>

    <div class="page-header">
      <h1>
        <%= @magasin.name %>

        <%= link_to edit_magasin_path(@magasin), class: "btn btn-success" do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>

        <%= link_to  @magasin, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <% end %>
      </h1>

    </div>

    <p>
      <strong>Chaine de magasin :</strong>
      <%= @magasin.chain %>
    </p>

    <p>
      <strong>Position :</strong>
      <%= @magasin.longitude %>, <%= @magasin.latitude %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @magasin.address %>
    </p>

    <p>
      <strong>City:</strong>
      <%= @magasin.city %>
    </p>

    <p>
      <strong>Zip:</strong>
      <%= @magasin.zip %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @magasin.phone %>
    </p>

    <p>
      <strong>Country code:</strong>
      <%= @magasin.country_code %>
    </p>
  </div>
</div>
